source 'https://rubygems.org'

gem 'rails', '3.2.9'
gem 'pg'
gem "heroku"
gem 'has_permalink'

gem 'thumbs_up'

# Asset Pipeline Plugins
gem 'jquery-rails'
gem 'haml-rails'

# Asset Pipeline
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :test, :development do
  gem "rspec-rails", ">= 2.0"
  gem "debugger"
end

gem 'cancan'
gem 'devise'

group :development do
  gem 'disable_assets_logger'
end

gem 'thin'

gem 'will_paginate'
gem 'acts_as_commentable'